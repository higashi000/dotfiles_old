alias dnvim="cd ~/.config/nvim"
alias setvim="nvim ~/.config/nvim/init.vim"
alias dtoml="cd ~/.config/nvim/toml"
alias dtemplate="cd ~/.config/nvim/template"
alias ivm="/usr/local/bin/vim"
alias vim="/usr/local/bin/vim"
