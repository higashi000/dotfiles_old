{
  "languageserver": {
    "clangd": {
      "command": "ccls",
        "filetypes": [
          "c",
        "cpp"
        ],
        "rootPatterns": [
          ".ccls",
          "compile_commands.json",
          ".vim/",
          ".git/",
          ".hg/"
        ]
    },
    "dls": {
      "command": "dls",
      "filetypes": [
        "d"
      ],
      "rootPatterns": ["dub.json", "dub.sdl"]
    },
    "pyls": {
      "command": "pyls",
      "filetypes": [
        "python"
      ]
    },
    "gopls": {
      "command": "gopls",
      "filetypes": [
        "go"
      ]
    }
  }
}
